
<div class="container-fluid">
  <div class="row">
    <div id="sign-up" class="col-sm-3 text-center">
      <% if !current_user %>
      <form action="/signup/new">
        <input class="menu-button" type="submit" value="Sign Up">
      </form>
      <% end %>
    </div>

    <div id="sign-in" class="col-sm-3 text-center">
      <% if !current_user %>
      <form action="/sessions/new">
        <input class="menu-button" type="submit" value="Sign In">
      </form>
      <% end %>
    </div>

    <div id="new-peep" class="col-sm-3 text-center">
      <% if current_user %>
      <form  action="/posts/new">
        <input class="menu-button" type="submit" value="New Peep!">
      </form>
      <% end %>
    </div>

    <div id="sign-out" class="col-sm-3 text-center">
      <% if current_user %>
      <form action="/signout">
        <input class="menu-button" type="submit" value="Sign Out">
      </form>
      <% end %>
    </div>
  </div>

  <% @posts.each do |post| %>
    <div class="container-fluid peep">
      <div class="row">
        <div class="col-sm-6">
          <h3 class="peep-heading"><%=post.title%></h3>
        </div>
        <div class="col-sm-6 text-right">
          <h5>Posted by <a id="<%= post.user.username %>" href="/<%= post.user.username %>"><%= post.user.username %></h5></a>
        </div>
      </div>
      <p><%=post.body%></p>
      <p><%=post.inception.strftime("Posted at %H:%M:%S on %d-%m-%Y")%></p>
    </div>
  <% end %>

</div>
